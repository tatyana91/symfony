{% extends 'base.html.twig' %}

{% block title %}BookProduct index{% endblock %}

{% block body %}
    <h1>BookProduct index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_product in book_products %}
            <tr>
                <td>{{ book_product.id }}</td>
                <td>{{ book_product.title }}</td>
                <td>{{ book_product.price }}</td>
                <td>
                    <a href="{{ path('book_product_show', {'id': book_product.id}) }}">show</a>
                    <a href="{{ path('book_product_edit', {'id': book_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_product_new') }}">Create new</a>
{% endblock %}
